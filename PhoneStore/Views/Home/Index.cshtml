@{
    ViewData["Title"] = "Home Page";

}
<div class="text-center">
	<h1 class="display-4">Welcome To BenTelecom</h1>
</div>
<div>
	<div id="carouselExampleCaptions" class="d-block carousel slide" data-bs-ride="carousel">
		<div class="carousel-indicators">
			<button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
			<button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="1" aria-label="Slide 2"></button>
			<button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="2" aria-label="Slide 3"></button>
		</div>
		<div class="carousel-inner">
			<div class="carousel-item active">
				<img src="https://i.ytimg.com/vi/YmLfjJybCvU/maxresdefault.jpg" class="d-block w-100" alt="sale">
				<div class="carousel-caption d-none d-md-block">
					<h5>Big Sale!</h5>
					<p>iPhone's accessories up to 30% less</p>
				</div>
			</div>
			<div class="carousel-item">
				<img src="https://thumbs.dreamstime.com/z/mobile-phone-store-hong-kong-27869977.jpg" class="d-block w-100" alt="sale">
				<div class="text-white bg-dark carousel-caption d-none d-md-block ">
					<h5>A new store opened in Herzliya</h5>
					<p> 26 Hamsgar St, Herzliya</p>
				</div>
			</div>
			<div class="carousel-item">
				<img src="https://i.ytimg.com/vi/5bgWxMGnlvc/maxresdefault.jpg" class="d-block w-100" alt="sale">
				<div class="carousel-caption d-none d-md-block">
					<h5>it's here!</h5>
					<p>iPhone 13 Pro Max is available now</p>
				</div>
			</div>
		</div>
		<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
			<span class="carousel-control-prev-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Previous</span>
		</button>
		<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
			<span class="carousel-control-next-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Next</span>
		</button>
	</div>
</div>


<div class="text-center">
    <br />
        <h3 class="h3">The two most highly rated phones today</h3>
        <br />
        <table>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Description</th>
                <th>Number of comments</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td><img width="200" height="200" src=@item.Picture /></td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Comments.Count</td>
                </tr>
            }
        </table>
		<br />
		<a asp-action="Index" asp-controller="Catalog">For the Full Catalog click here !</a>
</div>



