
@{
    ViewData["Title"] = "Index";
}
<h1>Catalog</h1>
<div class="btn-group">
  <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
     @ViewBag.CurrentCategory
  </button>
  <div class="dropdown-menu">
     @foreach (var item in ViewBag.Categories)
     {
        <a class="dropdown-item" asp-action="Index" asp-controller="Catalog" asp-route-id="@item.CategoryId">@item.Name</a>
     }
  </div>
</div>

<div class="row">
    @foreach(var item in Model)
    {
        <div class="col-4">
            <div>
                <img class="card-img-top" src="@item.Picture" alt="Card image">
                <div class="card-body">
                    <h4 class="card-title">@item.Name</h4>
                    <p class="card-text">@item.Description</p>
                    <a asp-route-id="@item.PhoneId" asp-action="Details" class="btn btn-primary">Details</a>
                 </div>
            </div>
        </div>
    }

</div>