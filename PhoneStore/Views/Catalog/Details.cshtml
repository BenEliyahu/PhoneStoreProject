<div>
    <a asp-action="Index">Back to List</a>
</div>


    <form method="post" >
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <button class="btn btn-secondary" type="submit">Submit</button>
            </div>
            <input name="Phone" type="hidden"  value="@Model.PhoneId" />
            <input name="CommentMessage" type="text" class="form-control" placeholder="Add you comments here" aria-label="" aria-describedby="basic-addon1">
        </div>
    </form>
    
    <div>
        <ul class="list-group  float-left">
